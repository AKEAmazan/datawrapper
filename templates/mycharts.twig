            <ul id="dynamic-tree">
            </ul>
        </ul>
    </div>
    <div class="gallery">

        {% if user.hasCharts %}
        <div class="thumbnails js-masonry" data-masonry-options='{ "itemSelector": ".grid-item", "columWidth": 200 }'>
            {% for chart in charts %}

