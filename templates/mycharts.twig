const dir_click = function(e) {
    var cwd, mypath,
        line = $('#folder-sequence');
        sep = ' > ';

    e.preventDefault();
    line.text('');

    mypath = Array.from(e.currentTarget.path);
    cwd = mypath.pop();

    mypath.forEach(function(dir, idx) {
        var a = document.createElement('a');

        a.innerText = dir;
        a.path = mypath.slice(0, idx + 1);
        $(a).click(dir_click);
        line.append(sep, a);
    });
    line.append(sep);
    $('#current-folder').text(cwd);
};

const build_tree_list = function(tree, parent, path) {
    var subfolders = Object.keys(tree);

    if (typeof(path)==='undefined') path = [];

    subfolders.forEach(function(folder) {
        var l = document.createElement('li'),
            a = document.createElement('a');
        a.innerText = folder;
        path.push(folder);
        a.path = Array.from(path);
        a.folder_id = tree[folder].id;
        $(a).click(dir_click);
        l.appendChild(a);
        parent.append(l);
        path.pop(folder);

        if (tree[folder]) {
            var nu_par = document.createElement('ul');
            parent.append(nu_par);
            build_tree_list(tree[folder].sub, $(nu_par), a.path);
        }
    });
};

const clean_root = function() {
    $('#folder-sequence').text('');
    $('#current-folder').text('¬†');  
};

$('document').ready(function() {
    $.getJSON('/api/folders/dir/user/')
        .done(function(res) {
            if (res.status == 'error') {
                alert(res.message);
            } else if (res.status == 'ok') {
                build_tree_list(res.data, $('#dynamic-tree'));
            }
        })
        .fail(function(err) {
            alert('API Error');
        });
    $('#line-root, #tree-root').click(clean_root);
});

</script>

