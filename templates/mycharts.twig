const handler = {
    fail: function(err) {
        alert('API Error');
        console.error(err);
    },
    done: function(res) {
        if (res.status == 'error') {
            alert(res.message);
        } else if (res.status == 'ok') {
            location.reload(true);
        }
    }
};

const folder_menu = function(el, org_id, path, subfolders) {
    const html_blob = `
        <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon-wrench"></i>
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li class="dropdown-submenu">
                    <a class="add-folder" tabindex="-1" href="#"><i class="icon-folder-open"></i> {% trans "Add" %}</a>
                    <ul class="dropdown-menu">
                        <div class="form-group">
                            <button type="button" class="btn folder-confirm disabled">OK</button>
                            <input type="text" class="form-control folder-input">
                        </div>
                    </ul>
                </li>
                <li class="dropdown-submenu">
                    <a class="move-to-folder" tabindex="-1" href="#"><i class="icon-folder-open"></i> {% trans "Move" %}</a>
                    <ul class="dropdown-menu move-links"></ul>
                </li>
                <li><a class="delete-folder" tabindex="-1" href="#"><i class="icon-remove"></i> {% trans "Remove" %}</a></li>
            </ul>
        </div>`;
    var menu;

    el.append(html_blob);
    menu = el.find(".btn-group .dropdown-menu");

    menu.find(".folder-input").click(function(ev) {
        ev.stopPropagation();
    });

    menu.find(".folder-input").on("input", function(ev) {
        menu.find(".folder-confirm").removeClass("disabled");
        $(ev.currentTarget).off();
    });

    menu.find(".folder-confirm").click(function(e) {
        var val = menu.find(".folder-input")[0].value,
            post_url = '/api/folders/dir/';
        e.preventDefault();
        if (val.search("/") != -1) {
            alert("Your folder name may not contain any slashes.");
            return;
        }
        post_url += (org_id) ? 'organization/' + org_id + '/': 'user/';
        post_url += (path) ? path + '/': '';
        post_url += val;
        $.ajax({
            url: post_url,
            type: 'POST',
            dataType: 'JSON'
        }).done(handler.done).fail(handler.fail);
    });

    menu.find(".delete-folder").click(function(e) {
        var del_url = '/api/folders/dir/';
        e.preventDefault();
        del_url += (org_id) ? 'organization/' + org_id + '/' : 'user/';
        del_url += path;
        $.ajax({
            url: del_url,
            type: 'DELETE',
            dataType: 'JSON'
        }).done(handler.done).fail(handler.fail);
    });

    // can't delete root or folders with subfolders
    if(typeof(path) === 'undefined' || subfolders)
        menu.find(".delete-folder").remove();
}

const build_folder_2_folder_movelinks = function(entrypoint, flat_list, org_id) {
    $(entrypoint + " .folder-list-item").each(function(i, entry) {
        var source_path = $.data(entry, "fullpath"),
            source_parent = source_path.slice(0, source_path.lastIndexOf('/'));

        flat_list.forEach(function(folder) {
            var l = document.createElement('li'),
                a = document.createElement('a'),
                move_menu,
                put_url = '/api/folders/dir/';

            // Do not create links for subfolders of this path
            if (folder === source_path || (source_parent !== '' && folder.startsWith(source_parent))) return;
            move_menu = $(entry).find(".dropdown-menu .move-links");

            a.innerText = folder.slice(1);
            a.setAttribute('href', '#');
            put_url += (org_id) ? 'organization/' + org_id : 'user';
            put_url += source_path + '?dst=' + folder;
            $(a).click(function(e) {
                e.preventDefault();
                $.ajax({
                    url: put_url,
                    type: 'PUT',
                    dataType: 'JSON'
                }).done(handler.done).fail(handler.fail);
            });
            l.appendChild(a);
            move_menu.append(l);
        });
    });

    // now remove the whole structure for folders that can't be moved anywhere
    $(".dropdown-menu .move-links").each(function(i, list){
        if (list.childElementCount === 0)
            $(list).parent().remove();
    });
};

const build_line = function(path, tree) {
    var cwd, mypath, hopper,
        line = $('#folder-sequence');
        sep = ' > ';

    line.text('');

    mypath = Array.from(path);
    cwd = mypath.pop();

    mypath.forEach(function(dir) {
        var a = document.createElement('a');

        a.innerText = dir;
        a.setAttribute('href', '{{ mycharts_base }}/by/folder/' + tree[dir].id);
        line.append(sep, a);
        tree = tree[dir].sub
    });
    line.append(sep);
    $('#current-folder').text(cwd);
};

const build_tree_list = function(branch, parent, org_id, flatter, path, pathstring, tree) {
    const filter = {
        key: '{{key}}',
        val: '{{val}}'
    };
    const folder_icon = '<i class="icon-folder-open"></i>';
    var nu_path,
        subfolders = Object.keys(branch);

    // first pass, initialize data
    if (typeof(path) === 'undefined') {
        path = [];
        pathstring = '';
        tree = branch;
    }

    subfolders.forEach(function(folder) {
        var l1 = document.createElement('li'),
            a1 = document.createElement('a'),
            l2 = document.createElement('li'),
            a2 = document.createElement('a'),
            id = branch[folder].id,
            org_snipplet = (org_id) ? '/organization/' + org_id : '';

        a1.innerHTML = folder_icon + ' ' + folder;
        if (branch[folder].charts > 0)
            a1.innerHTML += ' (' + branch[folder].charts + ')';
        a1.setAttribute('href', '{{ mycharts_base }}' + org_snipplet + '/by/folder/' + id);

        nu_path = path.concat(folder);
        nu_pstr = pathstring + '/' + folder;
        flatter(nu_pstr);

        l1.classList.add("folder-list-item");
        l1.appendChild(a1);
        folder_menu($(l1), org_id, nu_pstr.slice(1), branch[folder].sub != false); //last param evaluates to bool
        $.data(l1, "fullpath", nu_pstr);
        parent.append(l1);

        if (filter.key === 'folder' && filter.val == id) {
            // hijack this pass to build active folder line
            build_line(nu_path, tree);
        } else {
            // or append this folder to the MoveTo submenu
            a2.innerHTML = (org_id) ? '<b>' + org_id + '</b><span>' + nu_pstr + '</span>': nu_pstr.slice(1);
            a2.setAttribute('href', '#');
            a2.setAttribute('tabindex', '-1');
            l2.appendChild(a2);

            $('.dropdown-menu .folder-list').append(l2);
        }

        if (branch[folder].sub) {
            var nu_par = document.createElement('ul');
            parent.append(nu_par);
            build_tree_list(branch[folder].sub, $(nu_par), org_id, flatter, nu_path, nu_pstr, tree);
        }
    });
};

const add_chart_functions = function () {
    $('.chart .folder-list a').click(function(e) {
        var tar = $(e.currentTarget),
            id = tar.parents('.chart').data('id'),
            org_part = tar.find('b'),
            put_url = '/api/folders/chart/';
        e.preventDefault();

        put_url += (org_part.length) ? 'organization/' + org_part.text() + '/' + id + tar.find('span').text() : 'user/' + id + '/' + tar.text();

        $.ajax({
            url: put_url,
            type: 'PUT',
            dataType: 'JSON'
        }).done(handler.done).fail(handler.fail);
    });

    $('.chart .remove-from-dir').click(function(e) {
        var id = $(e.target).parents('.chart').data('id');
        e.preventDefault();

        $.ajax({
            url: '/api/folders/chart/' + id,
            type: 'DELETE',
            dataType: 'JSON'
        }).done(handler.done).fail(handler.fail);
    });
};

const do_stuff_with_folders = function(folder_obj) {
    var flatened_tree = [],
        root_id = '#base-folder'
        entrypoint = '#dynamic-tree';

    if (folder_obj.org_id !== false) {
        var org_tag = '-' + folder_obj.org_id.replace(' ','-').replace(/[^a-zA-Z0-9-]/g,'');
        entrypoint += org_tag;
        root_id += org_tag;
    }

    folder_menu($(root_id), folder_obj.org_id);

    build_tree_list(folder_obj.tree, $(entrypoint), folder_obj.org_id, function(path) {
        flatened_tree.push(path);
    });

    build_folder_2_folder_movelinks(entrypoint, flatened_tree, folder_obj.org_id);
};

const get_folders = function(orgs) {
    var api_calls = [],
        folders = [];

    api_calls.push($.getJSON('/api/folders/dir/user/')
        .done(function(res) {
            if (res.status == 'error') {
                alert(res.message);
            } else if (res.status == 'ok') {
                folders.push({ org_id: false, tree: res.data });
            }
        }).fail(handler.fail));
    Object.keys(orgs).forEach(function(key) {
        var org = orgs[key];
        api_calls.push($.getJSON('/api/folders/dir/organization/' + org.id + '/')
            .done(function(res) {
                if (res.status == 'error') {
                    alert(res.message);
                } else if (res.status == 'ok') {
                    folders.push({ org_id: org.id, org_name: org.name, tree: res.data });
                }
            }).fail(handler.fail));
    });
    $.when.apply(null, api_calls).done(function() {
        folders.sort(function(a, b) {
            if (!a.org_id) return -1;
            if (!b.org_id) return 1;
            return a.org_name.localeCompare(b.org_name);
        });
        folders.forEach(do_stuff_with_folders);
        add_chart_functions();
    });
}

$('document').ready(function() {
    get_folders({{ organizations | json | raw }});
});

