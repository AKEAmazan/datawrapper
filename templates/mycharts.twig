var folder_tree;

const build_line = function(path) {
    var cwd, mypath, hopper,
        line = $('#folder-sequence');
        sep = ' > ';

    line.text('');

    mypath = Array.from(path);
    cwd = mypath.pop();
    hopper = folder_tree;

    mypath.forEach(function(dir) {
        var a = document.createElement('a');

        a.innerText = dir;
        a.setAttribute('href', '{{ mycharts_base }}/by/folder/' + hopper[dir].id);
        line.append(sep, a);
        hopper = hopper[dir].sub
    });
    line.append(sep);
    $('#current-folder').text(cwd);
};

const build_tree_list = function(tree, parent, path, pathstring) {
    const filter = { 
        key: '{{key}}',
        val: '{{val}}'
    };
    // const folder_icon = '<i class="icon-folder-open"></i>';
    var nu_path,
        subfolders = Object.keys(tree);

    if (typeof(path) === 'undefined'){
        path = [];
        pathstring = '';
    }

    subfolders.forEach(function(folder) {
        var l1 = document.createElement('li'),
            a1 = document.createElement('a'),
            l2 = document.createElement('li'),
            a2 = document.createElement('a');

        // l.innerHTML = folder_icon;
        a1.innerText = folder;
        if (tree[folder].charts > 0)
            a1.innerText += ' (' + tree[folder].charts + ')';
        a1.setAttribute('href', '{{ mycharts_base }}/by/folder/' + tree[folder].id);

        nu_path = path.concat(folder);
        nu_pstr = pathstring + '/' + folder;

        l1.appendChild(a1);
        parent.append(l1);

        if (filter.key === 'folder' && filter.val == tree[folder].id) {
            // hijack this pass to build active folder line
            build_line(nu_path);
        } else {
            // or append this folder to the MoveTo submenu
            a2.innerText = nu_pstr.slice(1);
            a2.setAttribute('href', '#');
            a2.setAttribute('tabindex', '-1');
            l2.appendChild(a2);

            $('.dropdown-menu.folder-list').append(l2);
        }

        if (tree[folder]) {
            var nu_par = document.createElement('ul');
            parent.append(nu_par);
            build_tree_list(tree[folder].sub, $(nu_par), nu_path, nu_pstr);
        }
    });
};

$('document').ready(function() {
    $.getJSON('/api/folders/dir/user/')
        .done(function(res) {
            if (res.status == 'error') {
                alert(res.message);
            } else if (res.status == 'ok') {
                folder_tree = res.data
                build_tree_list(folder_tree, $('#dynamic-tree'));

                $('.chart .folder-list a').click(function(e) {
                    //only user for now
                    const folder_type = 'user';
                    var id = $(e.target).parents('.chart').data('id');
                    e.preventDefault();

                    $.ajax({
                        url: '/api/folders/chart/' + folder_type + '/' + id + '/' + $(e.target).text(),
                        type: 'PUT',
                        dataType: 'JSON'
                    }).done(function(res) {
                        if (res.status == 'error') {
                            alert(res.message);
                        } else if (res.status == 'ok') {
                            location.reload(true);
                        }
                    }).fail(function(err) {
                        alert('API Error');
                        console.error(err);
                    });
                });
            }
        }).fail(function(err) {
            alert('API Error');
            console.error(err);
        });
});

